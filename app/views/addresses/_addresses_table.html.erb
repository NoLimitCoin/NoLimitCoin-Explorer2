<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>Rank</th>
    <th>Address</th>
    <th>Balance (NLC2)</th>
    <th>%</th>
  </tr>
  </thead>
  <tbody>
  <% addresses.each_with_index do |addr, index| %>
      <tr>
        <td><%= offset + index %></td>
        <td align="left">
          <%= link_to addr.address, address_path(addr) %>
        </td>
        <td align="left">
          <%= "%.8f" %addr.balance %> NLC2
        </td>
        <td >
          <%= number_to_human(addr.coin_percentage) %>%
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<% if paginate %>
  <div class="row center">
    <%= will_paginate addresses, previous_label: '<', next_label: '>', inner_window: 1, outer_window: 3 %>
  </div>
<% end %>
